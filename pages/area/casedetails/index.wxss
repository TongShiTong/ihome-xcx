/* pages/area/casedetails/index.wxss */
page{
  background-color:#fff;
}
.swiper {
  width: 100%;
  height: 756rpx;
}
.content {
  margin: 0 30rpx 40rpx;
}
.fby {
  font-size: 24rpx;
  color: #999999;
  margin: 0 30rpx 56rpx;
}
.lb-img {
  width: 100%;
  height: 756rpx;
}
.gr-info {
  display: flex;
  justify-content: space-between;
  padding: 56rpx 30rpx 46rpx;
  background: #fff;
  align-items: center;
}
.info {
  display: flex;
}
.info image {
  width: 98rpx;
  height: 98rpx;
  margin-right: 18rpx;
  border-radius: 50%;
}
.info-box {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  font-size: 24rpx;
  color: #999999;
}
.name {
  font-size: 34rpx;
  font-weight: 500;
  color: #1A1A1A;
}
.guanzhu {
  width: 140rpx;
  height: 68rpx;
  border-radius: 10rpx;
  background: #6B0415;
  text-align: center;
  line-height: 68rpx;
  color: #fff;
}
.pinglun {
  font-size: 32rpx;
  color: #1A1A1A;
  background: #fff;
  padding-left: 30rpx;
  line-height: 1em;
}
.pinglun-box {
  display: flex;
  /* align-items: center; */
  justify-content: space-between;
  margin: 36rpx 30rpx 30rpx;
  line-height: 1em;
}
.img-info image {
  width: 68rpx;
  height: 68rpx;
  border-radius: 50%;
  background: #CCCCCC;
}
.pl-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 622rpx;
  font-size: 26rpx;
  color: #4D4D4D;
  padding: 20rpx 0rpx 32rpx 16rpx;
  box-sizing: border-box;
}
.pl-title {
  font-size: 28rpx;
  color: #1A1A1A;
  margin-bottom: 22rpx;
}
.louzhu {
  background: #ff8000;
  color: #fff;
  font-size: 24rpx;
  padding: 4rpx 10rpx;
  border-radius: 6rpx;
}
.time-box {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #999999;
  margin-top: 22rpx;
}
.time {
  margin-right: 40rpx;
}

.huifu {
  display: flex;
  width: 100%;
  border-radius: 10rpx;
  font-size: 26rpx;
  color: #999;
  background: #f2f2f2;
  padding: 30rpx;
  box-sizing: border-box;
}
.add-pl {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 150rpx;
  padding-top: 15rpx;
  background: #fff;
  box-shadow:0px -2rpx 6rpx 0px rgba(204,204,204,0.2);
}
.add-pl input{
  height: 68rpx;
  background: #F0F0F0;
  border-radius: 10rpx;
  margin: 0 30rpx;
  padding: 0 30rpx;
}