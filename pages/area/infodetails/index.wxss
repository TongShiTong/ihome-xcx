/* pages/area/infodetails/index.wxss */
.info {
  width: 100%;
  padding: 35rpx 30rpx 0rpx;
  background: #fff;
  box-sizing: border-box;
  line-height: 1;
  border-bottom: 1rpx solid #f5f5f5;
}
.infoname {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.name {
  color: #1A1A1A;
  font-size: 56rpx;
  font-weight: bold;
}
.name text {
  font-size: 22rpx;
  font-weight: 400;
}
.guanzhu {
  font-weight: 500;
  font-size: 30rpx;
  color: #fff;
  width: 140rpx;
  height: 68rpx;
  line-height: 68rpx;
  text-align: center;
  background: #6B0415;
  border-radius: 10rpx;
}
.slogn {
  font-size: 30rpx;
  color: #1A1A1A;
  font-weight: 500;
  margin: 30rpx 0;
}
.fensi {
  display: flex;
  align-items: center;
  font-size: 48rpx;
  color: #EB3026;
  font-weight: bold;
}
.fensi text {
  font-size: 28rpx;
  color: #4D4D4D;
  font-weight: 400;
}
.anli {
  text-align: center;
  font-size: 32rpx;
  color: #EB3026;
  margin-top: 100rpx;
  margin-bottom: 20rpx;
  font-weight: bold;
}
.content {
  background: #fff;
  width: 100%;
  margin-bottom: 16rpx;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.yuyue {
  display: flex;
  justify-content: space-between;
  padding: 10rpx 30rpx 0;
  background: #fff;
  width: 100%;
  height: 160rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;
}
.gz {
  width: 240rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  border-radius: 10rpx;
  color: #6B0415;
  background: #FAAAB7;
}
.yysjs {
  width: 400rpx;
  height: 94rpx;
  line-height: 94rpx;
  text-align: center;
  border-radius: 10rpx;
  background: #6B0415;
  color: #fff;
}